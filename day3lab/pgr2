#include <stdio.h>
#include <string.h>

void reverseWord(char* start, char* end) {
    while (start < end) {
        char temp = *start;
        *start = *end;
        *end = temp;
        start++;
        end--;
    }
}

void reverseWords(char str[]) {
    char *word_start = str;
    char *temp = str;

    while (*temp) {
        temp++;
        if (*temp == '\0' || *temp == ' ') {
            reverseWord(word_start, temp - 1);
            word_start = temp + 1;
        }
    }
}

int main() {
    char str[100];
    printf("Enter a sentence: ");
    fgets(str, sizeof(str), stdin);
    
    str[strcspn(str, "\n")] = 0;  // Remove the newline character from fgets
    
    reverseWords(str);
    printf("Reversed Sentence: %s\n", str);
    
    return 0;
}
